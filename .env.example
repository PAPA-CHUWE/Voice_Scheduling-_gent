# Server
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/voice_scheduler

# Redis (BullMQ + direct client). Use rediss:// for TLS (Upstash). Set in .env for direct inject in dev.
REDIS_URL=rediss://default:YOUR_TOKEN@immense-tiger-26265.upstash.io:6379
# Direct get/set example: npm run redis:direct

# Optional: API key (x-api-key header)
# API_KEY=

# Optional: Webhook secret (x-webhook-secret for POST /api/v1/webhooks/voice)
# WEBHOOK_SECRET=

# Auth: JWT for login. Required for POST /api/v1/auth/login. When set, Bearer token restricts sessions/events to owning user.
# JWT_SECRET=

# Google OAuth (required for calendar events)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5000/oauth2callback
GOOGLE_REFRESH_TOKEN=
GOOGLE_CALENDAR_ID=primary

# Defaults
DEFAULT_TIMEZONE=Africa/Harare
CORS_ORIGINS=*

# Email (Resend). Set to false to disable.
EMAIL_ENABLED=true
EMAIL_FROM=Voice Agent <no-reply@yourdomain.com>
RESEND_API_KEY=

# Reminders. Set to false to disable scheduling.
REMINDERS_ENABLED=true
